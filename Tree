var leafLoc = []; 

class Tree{
    constructor(x){
        this.x = x; 
        //this.leaves = []; 
    }

    branch(len){ //this branch method was referenced from chatgpt
      
      stroke(70, 40, 20);
      strokeCap(ROUND); 
      strokeWeight(map(len, 10, 100, 1, 15)); 

      line(0, 0, 0, -len); 
      let loc = createVector(0, -len); 
      translate(0, -len); 
      leafLoc.push(loc); 

      if(len>10){
        push();

        rotate(30); // right branch !! COME BACK, MAY NEED TO CHANGE RANDOM AND MODIFY NO LOOP
        this.branch(len*0.7); 
        
        rotate(-60); // left branch
        this.branch(len*0.7); 
         
        pop(); 
         
     }
     else {
        noStroke();
        fill(255); 
        let position = createVector(0, 0); 
        let size = createVector(5, 15); 

        ellipse(0, 0, 5, 15)
     }   

     
     return leafLoc;  


}

}