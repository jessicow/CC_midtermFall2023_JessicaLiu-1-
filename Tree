class Tree{
    constructor(x){ //constructor takes parameter that will set the angles of the tree
        this.x = x; 
    }

    branch(len){ //this branch method was referenced from chatgpt
      
      stroke(70, 40, 20); //sets branch color to dark brown
      strokeCap(ROUND);  //sets edges of branches to a round cap
      strokeWeight(map(len, 10, 100, 1, 15));  // map helps create a more realistic looking tree 

      line(0, 0, 0, -len); 
      translate(0, -len); 


      if(len>10){
        push();

        rotate(0.5); // right branch !! COME BACK, MAY NEED TO CHANGE RANDOM AND MODIFY NO LOOP
        this.branch(len*0.7); 
        
        rotate(-0.5); // left branch
        this.branch(len*0.7); 
         
        pop(); 
         
     }
     else {
        noStroke();

        fill(225, 40, 170, 255); 

        ellipse(0, 0, 5, 15)
     }    


}

}